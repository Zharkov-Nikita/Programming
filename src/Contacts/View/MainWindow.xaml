<Window x:Class="Contacts.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:View.ViewModel" d:DataContext="{d:DesignInstance Type=local:MainVM}"
        mc:Ignorable="d"
        Title="Contacts" Height="500" Width="770" MinHeight="500" MinWidth="770">
    <Grid Background="#f8f8f8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="256"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid.Resources>
            <Style TargetType="Button">
                <Setter Property="Margin" Value="3"/>
                <Setter Property="Height" Value="25"/>
                <Setter Property="Width" Value="75"/>
            </Style>
            <Style TargetType="TextBox">
                <Setter Property="Padding" Value="0,5,0,0"/>
            </Style>
        </Grid.Resources>
        <GridSplitter
            Grid.Column="1"
            ShowsPreview="False" 
            Width="3"
            Background="White"
            HorizontalAlignment="Center" 
            VerticalAlignment="Stretch" />
        <Grid Grid.Column="0" Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            <DockPanel Grid.Row="0" Margin="3">
                <Label Content="Find:" Width="40"/>
                <TextBox/>
            </DockPanel>
            <ListBox
                ItemsSource="{Binding Contacts}"
                VerticalAlignment="Stretch"
                Grid.Row="1"
                Margin="3"
                SelectedItem="{Binding CurrentContact, Mode=TwoWay}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <StackPanel Orientation="Horizontal" Grid.Row="2">
                <Button Content="Add" Command="{Binding SaveCommand}"/>
                <Button Content="Edit" Command="{Binding EditCommand}" IsEnabled="{Binding IsEnabled}"/>
                <Button Content="Remove" Command="{Binding LoadCommand}" IsEnabled="{Binding IsEnabled}"/>
            </StackPanel>
        </Grid>
        <Grid Background="White" Grid.Column="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Image
                Width="100"
                Height="100"
                VerticalAlignment="Top"
                Margin="5,34"
                Source="user.png"/>
            <StackPanel Margin="5" Grid.Column="1">
                <Label Content="Name:" Height="26"/>
                <TextBox
                    Height="26"
                    TextWrapping="Wrap"
                    Text="{Binding EditContact.Name, UpdateSourceTrigger=PropertyChanged}"
                    Margin="3"
                    IsReadOnly="{Binding IsReadOnly}"/>
                <Label Content="Phone Number:" Height="26"/>
                <TextBox
                    Height="26"
                    TextWrapping="Wrap"
                    Text="{Binding EditContact.Phone, UpdateSourceTrigger=PropertyChanged}"
                    Margin="3"
                    IsReadOnly="{Binding IsReadOnly}"/>
                <Label Content="Email:" Height="26"/>
                <TextBox
                    Height="26"
                    TextWrapping="Wrap"
                    Text="{Binding EditContact.Email, UpdateSourceTrigger=PropertyChanged}"
                    Margin="3"
                    IsReadOnly="{Binding IsReadOnly}"/>
                <Button
                    Content="Apply"
                    Command="{Binding LoadCommand}"
                    HorizontalAlignment="Left"
                    Margin="3,50,0,0"
                    Visibility="Visible"/>
            </StackPanel>            
        </Grid>
    </Grid>
</Window>